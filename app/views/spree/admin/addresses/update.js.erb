$("#admin_user_address_errors").html("<%= escape_javascript(render(:partial => 'spree/shared/error_messages', :locals => { :target => @address })) %>");
<% if @error %>
	show_flash('error', "<%= j Spree.t('user_address_not_updated') %>")
<% else %>
	show_flash('success', "<%= j Spree.t('user_address_updated') %>")
<% end %>
$("#admin_user_address_list").html("<%= escape_javascript(render(:partial => 'spree/admin/addresses/user_address_list' )) %>");
$("#admin_user_address_list").removeClass("hidden");
$("#admin_user_new_address").removeClass("hidden");
$("#admin_user_address_form").addClass("hidden");
